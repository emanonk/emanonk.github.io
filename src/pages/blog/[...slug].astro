---
import type { ImageMetadata } from 'astro';
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';

const heroImages = import.meta.glob('../../assets/posts/**/*.{avif,gif,jpeg,jpg,png,webp}', {
	eager: true,
});

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);
const heroImageModule = post.data.heroImage
	? (heroImages[`../../assets/${post.data.heroImage}`] as { default: ImageMetadata } | undefined)
	: undefined;
const heroImage = heroImageModule?.default;
---

<BlogPost {...post.data} heroImage={heroImage}>
	<Content />
</BlogPost>
