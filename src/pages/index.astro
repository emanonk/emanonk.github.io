---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = await getCollection('blog');
const tagSet = new Set<string>();
posts.forEach((post) => {
	post.data.tags?.forEach((tag) => tagSet.add(tag));
});
const tags = Array.from(tagSet).sort((a, b) => a.localeCompare(b));
const postsByYear = new Map<number, typeof posts>();
posts.forEach((post) => {
	const year = post.data.pubDate.getFullYear();
	const yearPosts = postsByYear.get(year) ?? [];
	yearPosts.push(post);
	postsByYear.set(year, yearPosts);
});
const years = Array.from(postsByYear.keys()).sort((a, b) => b - a);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>Hi ðŸ‘‹</h1>
<p>
	This is my personal blog where I write about software engineering, system design,
	and building backend systems in the real world.
</p>
<p>
	Most posts focus on practical architecture topics, trade-offs, and lessons learned
	from working with modern backend stacks.
</p>
			<section>
				<h2>Tags</h2>
				{tags.length === 0 ? (
					<p>No tags yet.</p>
				) : (
					<p>
						{tags.map((tag, index) => (
							<>
								<a href={`/tags/${encodeURIComponent(tag)}/`}>{tag}</a>
								{index < tags.length - 1 ? ', ' : ''}
							</>
						))}
					</p>
				)}
			</section>
			<section>
				<h2>Posts by year</h2>
				{years.length === 0 ? (
					<p>No posts yet.</p>
				) : (
					years.map((year) => (
						<div>
							<h3>{year}</h3>
							<ul>
								{postsByYear.get(year)?.map((post) => (
									<li>
										<a href={`/blog/${post.id}/`}>{post.data.title}</a>
									</li>
								))}
							</ul>
						</div>
					))
				)}
			</section>
		</main>
		<Footer />
	</body>
</html>
